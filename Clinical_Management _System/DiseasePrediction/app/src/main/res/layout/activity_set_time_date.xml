<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_time_date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amrutb.diseaseprediction.SetTimeDate">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#044e97"
        android:textAlignment="center"
        android:id="@+id/text"
        android:text="Set Appointment Date and Time"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="40sp"
        android:textColor="#5711ed"
        android:textStyle="italic"
        android:textSize="30sp"
        android:text="click here to set date"
        android:textAlignment="center"
        android:id="@+id/date"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="#5711ed"
        android:id="@+id/time"
        android:text="click here to set time"
        android:textAlignment="center"
        android:layout_marginTop="40sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginTop="40sp"
        android:background="@drawable/button"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/send"
        android:text="Send Appointment Request"/>

</RelativeLayout>
