<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fffca0">

        <TextView
            android:id="@+id/hospitalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f97b"
            android:text="Hospital Name"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/hospitalName"
            android:id="@+id/table4"
            android:layout_marginTop="5sp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Symptoms: "
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtSymptoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="symptoms"
                android:gravity="center_vertical"
                android:textSize="18sp"
                />
        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/table4"
            android:id="@+id/table5"
            android:layout_marginTop="5sp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Mobile Number: "
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MobileNo"
                android:gravity="center_vertical"
                android:textSize="15sp"
                />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/table5"
            android:id="@+id/table6"
            android:layout_marginTop="5sp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Requested App. Date: "
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:gravity="center_vertical"
                android:textSize="20sp"
                />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/table6"
            android:id="@+id/table7"
            android:layout_marginTop="5sp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Requested App. Time: "
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub-area"
                android:gravity="center_vertical"
                android:textSize="20sp"
                />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_below="@id/table7">
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Accept"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:id="@+id/buttonAccept"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Reject"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:id="@+id/buttonReject"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>